<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="0">

    <TableRow android:gravity="center">
        <TextView
                android:text="Rainbow Man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center"/>
    </TableRow>

    <TableRow android:gravity="center">
        <TextView
                android:text="入库"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"/>
    </TableRow>
    <TableRow android:gravity="center" android:height="30dp">

        <TextView
                android:text="请选择仓库："
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
        />

        <Spinner
                android:id="@+id/add_item_select_warehouse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
        />
    </TableRow>
    <TableRow android:gravity="center" android:height="30dp">

        <TextView
                android:text="请选择品类："
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
        />

        <Spinner
                android:id="@+id/add_item_select_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
        />
    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="现有库存:"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
        />
        <TextView
                android:id="@+id/additem_have_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:gravity="center"
        />
    </TableRow>
    <TableRow android:gravity="center" >
        <TextView
                android:text="入库库存:"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
        />
        <EditText
                android:id="@+id/additem_add_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:gravity="center"
        />
    </TableRow>
    <TableRow android:gravity="center">
        <Button
                android:id="@+id/additem_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入库"
        />
    </TableRow>


</TableLayout>
