<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TableRow android:gravity="center">
        <TextView
                android:text="Rainbow Man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center"/>
    </TableRow>

    <TableRow android:gravity="center">
        <TextView
                android:text="添加客户"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"/>
    </TableRow>


    //客户管理

    <TableRow android:gravity="center">
        <TextView
                android:text="客户姓名："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        />
        <EditText
                android:id="@+id/clientname_edit"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
        />
    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="客户电话："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        />
        <EditText
                android:id="@+id/clientphone_edit"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
        />
    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="客户性别："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        />
        <RadioGroup
                android:id="@+id/clientsex_radiogroup"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:contentDescription="性别"
                android:orientation="horizontal"
        >
            <RadioButton
                    android:id="@+id/clientsex_female"
                    android:text="男"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

            />
            <RadioButton
                    android:id="@+id/clientsex_male"
                    android:text="女"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="客户地址："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        />
        <EditText
                android:id="@+id/clientadd_edit"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"

        />
    </TableRow>
    <TableRow android:gravity="center">
        <Button
                android:id="@+id/client_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
        />
    </TableRow>

</TableLayout>
