<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="0">

    <TableRow android:gravity="center">
        <TextView
                android:text="Rainbow Man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center"/>
    </TableRow>

    <TableRow android:gravity="center">
        <TextView
                android:text="查看库存"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"/>
    </TableRow>

    <TableRow>
        <Spinner
                android:id="@+id/select_warehouse_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
        />

    </TableRow>

    <TableRow android:gravity="center">
        <Button
                android:id="@+id/get_select_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取库存信息"
        />
    </TableRow>
    <TableRow android:gravity="center">

        <TextView
                android:text="品名"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"

        />
        <TextView
                android:text="库存量/kg"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"/>

    </TableRow>

    //库存管理
    <TableRow android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content">
        <ListView
                android:id="@+id/listview_select_invnetory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

        </ListView>
    </TableRow>


</TableLayout>
