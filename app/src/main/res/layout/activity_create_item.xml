<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TableRow android:gravity="center">
        <TextView
                android:text="Rainbow Man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center"/>
    </TableRow>
    <TableRow android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:text="添加品类"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"/>
    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="品　名："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                />
        <EditText
                android:id="@+id/create_item_name_edit"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:hint="请输入品名"
        />
    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="库存量："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                />
        <EditText
                android:id="@+id/create_item_inventory_edit"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:hint="请输入库存量"
        />
    </TableRow>
    <TableRow android:gravity="center">
        <TextView
                android:text="库存单位："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        />
        <RadioGroup
                android:id="@+id/weight_unit_radiogroup"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:contentDescription="单位"
                android:orientation="horizontal"
        >
            <RadioButton
                    android:id="@+id/g"
                    android:text="克"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

            />
            <RadioButton
                    android:id="@+id/kg"
                    android:text="千克"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:id="@+id/ton"
                    android:text="吨"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

    </TableRow>
    <TableRow android:gravity="center">

        <TextView
                android:text="选择仓库："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:layout_height="wrap_content"
        />

        <Spinner
                android:id="@+id/create_item_select_warehouse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
        />


    </TableRow>
    <TableRow android:gravity="center">
        <Button
                android:id="@+id/create_item_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
        />
    </TableRow>

</TableLayout>