                android:id="@+id/inventory_add"
                android:text="入库"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="visible"
        />
        <Button
                android:id="@+id/inventory_out"
                android:text="出库"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="visible"
        />
        <Button
